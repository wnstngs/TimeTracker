@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<UsersListViewModel>
@inject IViewLocalizer Localizer

<div id="table">
	<table class="table">
		<thead>
		<tr>
			<td>@Localizer["Name"]</td>
			<td>@Localizer["Email"]</td>
			<td>@Localizer["Roles"]</td>
			<td></td>
		</tr>
		</thead>

		@foreach (var user in Model)
		{
			<tr>
				<td>@user.UserName</td>
				<td>@user.UserEmail</td>
				<td>@user.UserRoles</td>
				<td>
					<a href="@Url.Action("Edit", "Users", new { id = user.UserId })" class="btn btn-primary btn-sm btn-modal"
					   data-bs-toggle="modal" data-bs-target="#modal">
						@Localizer["Edit"]
					</a>
					<a href="@Url.Action("Delete", "Users", new { id = user.UserId })" class="btn btn-danger btn-sm btn-modal"
					   data-bs-toggle="modal" data-bs-target="#modal">
						@Localizer["Delete"]
					</a>
				</td>
			</tr>
		}
	</table>
</div>