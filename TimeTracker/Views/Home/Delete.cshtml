<div class="modal fade" id="deleteTimeEntryModal" tabindex="-1"
	 aria-labelledby="deleteTimeEntryModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="deleteTimeEntryModalLabel">Delete time entry</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" 
				        aria-label="Close"></button>
			</div>
			<form action="@Url.Action("Delete", "Home")" method="post">
				<div class="modal-body">
					<p>Do you want to delete this time entry?</p>
					<input type="hidden" name="id"/>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
						Cancel
					</button>
					<button type="submit" class="btn btn-danger">Delete</button>
				</div>
			</form>
		</div>
	</div>
</div>


<script>
	const deleteTimeEntryModal = document.getElementById('deleteTimeEntryModal')
	deleteTimeEntryModal.addEventListener('show.bs.modal', function (event) {
		// Button that triggered the modal
		const button = event.relatedTarget
		// Extract info from data-bs-* attributes
		const id = button.getAttribute('data-bs-id')

		// Update the modal's content.
		const modalBodyInput = deleteTimeEntryModal.querySelector('.modal-body input')
		modalBodyInput.value = id
	})
</script>
