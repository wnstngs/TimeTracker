@model TimeEntryFormViewModel

<div class="modal fade" id="createTimeEntryModal" tabindex="-1"
     aria-labelledby="createTimeEntryModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="createTimeEntryModalLabel">New time entry</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form action="@Url.Action("CreateTimeEntry", "Home")" method="post">
				<div class="modal-body">
					<input id="weekHiddenInput" type="hidden" name="week" />
					<input id="dateHiddenInput" type="hidden" name="date" />
					<div class="form-floating mb-3">
						<input asp-for="Comment" class="form-control" aria-required="true"
						       placeholder=""/>
						<label asp-for="Comment">Comment</label>
						<span asp-validation-for="Comment" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="HoursSpent" class="form-control" aria-required="true"
						       placeholder=""/>
						<label asp-for="HoursSpent">Hours spent</label>
						<span asp-validation-for="HoursSpent" class="text-danger"></span>
					</div>
					<div class="form-floating mb-3">
						<input asp-for="MinutesSpent" class="form-control" aria-required="true"
						       placeholder=""/>
						<label asp-for="MinutesSpent">Minutes spent</label>
						<span asp-validation-for="MinutesSpent" class="text-danger"></span>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
					<button type="submit" class="btn btn-primary">Create</button>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	const createTimeEntryModal = document.getElementById('createTimeEntryModal')
	createTimeEntryModal.addEventListener('show.bs.modal', function (event) {
		// Button that triggered the modal
		const button = event.relatedTarget
		// Extract info from data-bs-* attributes
		const date = button.getAttribute('data-bs-date')
		const week = button.getAttribute('data-bs-week')

		// Update the modal's content.
		const weekHiddenInput = createTimeEntryModal.querySelector('.modal-body #weekHiddenInput')
		weekHiddenInput.value = week
		const dateHiddenInput = createTimeEntryModal.querySelector('.modal-body #dateHiddenInput')
		dateHiddenInput.value = date
	})
</script>

@section Scripts
{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
